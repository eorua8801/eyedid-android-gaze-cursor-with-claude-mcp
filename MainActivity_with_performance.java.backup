    @Override
    protected void onDestroy() {
        super.onDestroy();
        
        // 🤖 성능 모니터링 정리
        stopPerformanceMonitoring();
        
        if (gazeTracker != null) {
            gazeTracker.stopTracking();
        }
        backgroundThread.quitSafely();
        instance = null;
    }

